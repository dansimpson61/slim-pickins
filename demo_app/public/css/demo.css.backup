/* Slim-Pickins Reactive Demo Styles */

:root {
  --primary: #1558d6;
  --ink: #1a1a1a;
  --ink-light: #666;
  --paper: #fff;
  --border: #e0e0e0;
  --space: 1rem;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  line-height: 1.6;
  color: var(--ink);
  background: #f5f5f5;
}

.container {
  max-width: 960px;
  margin: 0 auto;
  padding: 0 var(--space);
}

/* Header */
.header {
  background: var(--paper);
  border-bottom: 1px solid var(--border);
  padding: var(--space) 0;
  margin-bottom: calc(var(--space) * 2);
}

.header h1 {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
}

.header nav {
  display: flex;
  gap: var(--space);
}

.header nav a {
  color: var(--ink);
  text-decoration: none;
  padding: 0.5rem 1rem;
  border-radius: 4px;
}

.header nav a:hover {
  background: #f0f0f0;
}

/* Hero */
.hero {
  text-align: center;
  margin-bottom: calc(var(--space) * 3);
}

.hero h2 {
  font-size: 2rem;
  margin-bottom: 0.5rem;
}

.lead {
  font-size: 1.25rem;
  color: var(--ink-light);
}

/* Calculator */
.calculator-section {
  background: var(--paper);
  padding: calc(var(--space) * 2);
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  margin-bottom: calc(var(--space) * 2);
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space);
  margin-bottom: calc(var(--space) * 2);
}

.form-group {
  display: flex;
  flex-direction: column;
}

label {
  font-weight: 500;
  margin-bottom: 0.5rem;
  color: var(--ink);
}

.input-group {
  display: flex;
  align-items: center;
  border: 1px solid var(--border);
  border-radius: 4px;
  overflow: hidden;
}

.input-group:focus-within {
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(21, 88, 214, 0.1);
}

.input-prefix,
.input-suffix {
  padding: 0.75rem;
  background: #f8f8f8;
  color: var(--ink-light);
  font-weight: 500;
}

.input-group input {
  flex: 1;
  border: none;
  padding: 0.75rem;
  font-size: 1rem;
  outline: none;
}

/* Results */
#results {
  transition: opacity 0.2s;
}

.results-card {
  background: #f8f9fa;
  padding: calc(var(--space) * 1.5);
  border-radius: 8px;
  border: 1px solid var(--border);
}

.results-card h3 {
  margin-bottom: var(--space);
  color: var(--ink);
}

.results-table {
  width: 100%;
  border-collapse: collapse;
}

.results-table tr {
  border-bottom: 1px solid var(--border);
}

.results-table tr:last-child {
  border-bottom: none;
}

.results-table td {
  padding: 0.75rem;
}

.results-table .numeric {
  text-align: right;
  font-weight: 600;
  color: var(--primary);
  font-size: 1.125rem;
}

.calculation-details {
  margin-top: var(--space);
  padding-top: var(--space);
  border-top: 1px solid var(--border);
}

.muted {
  color: var(--ink-light);
  font-size: 0.875rem;
}

/* Explanation */
.explanation,
.code-example,
.example-section {
  background: var(--paper);
  padding: calc(var(--space) * 2);
  border-radius: 8px;
  margin-bottom: calc(var(--space) * 2);
}

.explanation h3,
.code-example h3,
.example-section h3 {
  margin-bottom: var(--space);
}

.explanation ol {
  margin-left: 1.5rem;
}

.explanation li {
  margin-bottom: 0.5rem;
}

pre {
  background: #1a1a1a;
  color: #f0f0f0;
  padding: var(--space);
  border-radius: 4px;
  overflow-x: auto;
  font-size: 0.875rem;
  line-height: 1.5;
}

code {
  font-family: "SF Mono", Consolas, "Liberation Mono", Menlo, monospace;
}

/* Footer */
.footer {
  text-align: center;
  padding: calc(var(--space) * 2) 0;
  color: var(--ink-light);
  margin-top: calc(var(--space) * 4);
}

/* Buttons */
.btn {
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 4px;
  font-size: 1rem;
  cursor: pointer;
  text-decoration: none;
  display: inline-block;
}

.btn-secondary {
  background: #6c757d;
  color: white;
}

.btn-secondary:hover {
  background: #5a6268;
}
